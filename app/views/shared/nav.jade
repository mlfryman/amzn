.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      a.navbar-brand(href='/') Amzn
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-main')
        span.icon-bar
        span.icon-bar
        span.icon-bar
    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if user
          li.divider
          li: a(href='/products'): i.fa.fa-search.fa-lg &nbsp; Shop
          li: a(href='/cart'): i.fa.fa-shopping-cart.fa-lg &nbsp; Cart
          li: a(href='/profile'): i.fa.fa-user &nbsp; #{user.email || user.username || user.displayName}
          li
            form.navbar-form(method='post', action='/logout')
              .form-group
                input(type='hidden', name='_method', value='delete')
                button.btn.btn-warning.btn-md Logout
        else
          li: a(href='/register'): i.fa.fa-user.fa-lg &nbsp; Register
          li: a(href='/login'): i.fa.fa-rocket.fa-lg &nbsp; Login
          li: a(href='/auth/twitter'): i.fa.fa-twitter.fa-lg
          li: a(href='/auth/github'): i.fa.fa-github.fa-lg
          li: a(href='/auth/google'): i.fa.fa-google.fa-lg
          li: a(href='/auth/facebook'): i.fa.fa-facebook.fa-lg

